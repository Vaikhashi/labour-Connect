<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LabourConnect - Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .list-group-item {
            padding: 1rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <h2 class="text-center mb-4">Available Users</h2>
        <div class="list-group">
            <% if (users.length > 0) { %>
                <% users.forEach(user => { %>
                    <% if (user.id !== u1.id) { %> <!-- Hide current user -->
                        <a href="/chat/<%=u1._id %>/<%= user.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <%= user.fullname %>
                            <span class="badge bg-primary">Chat</span>
                        </a>
                    <% } %>
                <% }) %>
            <% } else { %>
                <p class="text-center">No users available.</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>