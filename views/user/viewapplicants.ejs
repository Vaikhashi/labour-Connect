<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Applicants</title>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
    
    <h1 class="text-center">Applicants for <%= job.title %></h1>
    <h2 class="text-center text-muted">Posted by: <%= u1.fullname %></h2>
    
    <!-- Table to display applicants -->
    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Skillsets</th>
                    <th>Expected Salary </th>
                </tr>
            </thead>
            <tbody>
                <% if (applicants.length > 0) { %>
                    <% applicants.forEach(applicant => { %>
                        <tr>
                            <td><%= applicant.fullname  %></td>
                            <td> <%= applicant.skills %></td>
                            <td> <%= applicant.salary %> </td>
                            <td>
                                <a href="/login/<%=u1._id %>/application/<%=applicant._id%>">
                                    View Profile
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center text-muted">No applicants found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <!-- Back to Dashboard Button -->
    <div class="text-center mt-4">
        <a href="/login/<%= u1._id %>" class="btn btn-primary">Back to Dashboard</a>
    </div>
    
    <!-- Bootstrap JS for responsiveness -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
