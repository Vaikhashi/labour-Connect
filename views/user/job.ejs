                    <form action="/login/<%=u1._id %>/jobs/<%= job._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this job opening?');">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete Job</button>
