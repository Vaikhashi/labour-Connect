<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LabourConnect</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* General Styles */
        html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}


body {
    background: url('/images/image.webp') no-repeat center center fixed;
    background-size: cover;
    width: 100vw;
    height: 100vh;
    min-height: 100vh;
    position: relative;
    z-index: -2; /* Keep it behind everything */
} 





        /* Navbar */
        .navbar {
            padding: 15px;
            background-color: #222 !important;
        }

        .navbar .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: white;
        }

        .navbar .nav-link {
            color: white !important;
            transition: 0.3s;
        }

        .navbar .nav-link:hover {
            background-color: white;
            color: #709775 !important;
            border-radius: 5px;
        }

        /* Dark Mode Toggle */
        .darkModeToggle {
            width: 40px;
            height: 40px;
            background: transparent;
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .darkModeToggle i {
            font-size: 22px;
            color: white;
        }

        .darkModeToggle:hover {
            transform: scale(1.2);
        }

        /* Hero Section */

        .hero {
    position: relative; /* Make sure it sits above the video */
    z-index: 1; /* Keeps text & button visible */
    text-align: center;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    width: 100%;
}


        /* Dark Overlay */
        .hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }
        



        .hero .overlay-content {
            position: relative;
            z-index: 1;
        }

        .hero h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 15px;
        }

        .hero p {
            font-size: 1.2rem;
            color: #fff;
            margin-bottom: 20px;
        }

        /* Learn More Button */
        .learn-more-btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 8px;
            transition: background 0.3s ease, transform 0.2s ease;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
        }

        .learn-more-btn:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }

        /* About Us Section */
        .content {
            max-width: 800px;
            margin: 60px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .content h2 {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 15px;
        }

        .content p {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #555;
            margin-bottom: 15px;
        }

        /* Forms (Login & Contact) */
        .login-form, .contact-form {
            max-width: 600px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .login-form input, .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Dark Mode Styles */
        body.dark-mode {
            background-color: #2c2c2c;
            color: white;
        }

        body.dark-mode .navbar {
            background-color: #222 !important;
        }

        body.dark-mode .hero h1 {
            color: white;
        }

        body.dark-mode .learn-more-btn {
            background-color: #4da8ff;
        }

        body.dark-mode .learn-more-btn:hover {
            background-color: #007bff;
        }
 




    </style>
</head>
<body>

  


<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-dark sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand text-white" href="#">Labour Connect</a>
        
        <!-- Navbar Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links -->
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <div class="navbar-nav">
                <a class="nav-link text-white" href="/labour">Home</a>
                <a class="nav-link text-white" href="/login">Login</a>
                <a class="nav-link text-white" href="/contact">Contact</a>
            </div>

            <!-- Dark Mode Toggle -->
            <button class="darkModeToggle btn btn-outline-light">
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </div>
</nav>


<!-- Hero Section -->
<section class="hero">
<!-- 
    <div class="video-overlay" id="videoOverlay">
        <video id="landingVideo" autoplay muted playsinline>
            <source src="/videos/labour.mp4" type="video/mp4">
    
        </video>    
    </div> -->

    <div class="overlay-content">
        <h1>Welcome to LabourConnect</h1>
        <p>Find skilled workers and connect instantly!</p>
        <a href="/about" class="btn btn-primary learn-more-btn">Learn More</a>
    </div>
</section>

<!-- JavaScript for Dark Mode -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const darkModeToggle = document.querySelector('.darkModeToggle');

        // Load dark mode setting from localStorage
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
        }

        // Toggle dark mode
        darkModeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');

            if (document.body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
            } else {
                localStorage.setItem('theme', 'light');
            }
        });
    });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>




















