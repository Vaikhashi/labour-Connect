<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact - LabourConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
    <style>
        /* Global Styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            transition: background 0.3s, color 0.3s;
        }

        /* Navbar */
        .navbar {
            padding: 15px;
        }

        .navbar .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: white;
        }

        .navbar .nav-link {
            color: white !important;
            transition: 0.3s;
        }

        .navbar .nav-link:hover {
            background-color: white;
            color: #709775 !important;
            border-radius: 5px;
        }

        /* Dark Mode Toggle */
        .darkModeToggle {
            width: 40px;
            height: 40px;
            background: transparent;
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .darkModeToggle i {
            font-size: 22px;
            color: white;
        }

        .darkModeToggle:hover {
            transform: scale(1.2);
        }

        /* Form Styles (Contact) */
        .contact-form {
            max-width: 600px;
            margin: 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .contact-form textarea {
            height: 100px;
        }

        .contact-form .btn {
            background-color: #5a7f60;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            transition: 0.3s;
        }

        .contact-form .btn:hover {
            background-color: #446d48;
        }

        /* Dark Mode Styles */
        body.dark-mode {
            background-color: #2c2c2c;
            color: white;
        }

        body.dark-mode .navbar {
            background-color: #222 !important;
        }

        body.dark-mode .nav-link {
            color: #ffffff !important;
        }

        body.dark-mode .contact-form {
            background: #333;
            color: white;
        }

        body.dark-mode .contact-form input, body.dark-mode .contact-form textarea {
            background: #555;
            border: 1px solid #777;
            color: white;
        }

        body.dark-mode .contact-form .btn {
            background-color: #6a8d56;
            color: white;
        }

        body.dark-mode .contact-form .btn:hover {
            background-color: #4d6f39;
        }
    </style>
</head>
<body>
    <!-- Navbar Section -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <nav class="navbar navbar-expand-lg bg-dark border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">Labour Connect</a>
            
            <!-- Navbar Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Navbar Items -->
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav me-auto">
                    <a class="nav-link active text-white" href="/labour">Home</a>
                    <a class="nav-link text-white" href="/login">Login</a>
                    <a class="nav-link text-white" href="/contact">Contact</a>
                </div>
    
                <!-- Dark Mode Toggle Button -->
                <button class="darkModeToggle btn btn-outline-light">
                    <i class="fas fa-moon"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Contact Form Section -->
    <section class="contact-form">
        <h2>Contact Us</h2>
        <form>
            <input type="text" placeholder="Your Name" required>
            <input type="email" placeholder="Your Email" required>
            <textarea placeholder="Your Message" required></textarea>
            <button type="submit" class="btn">Send Message</button>
        </form>
    </section>

    <!-- JavaScript for Dark Mode -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const darkModeToggle = document.querySelector('.darkModeToggle');
            const body = document.body;
    
            // Check localStorage and apply dark mode on page load
            if (localStorage.getItem('theme') === 'dark') {
                body.classList.add('dark-mode');
            }
    
            // Toggle dark mode on button click
            darkModeToggle.addEventListener('click', () => {
                body.classList.toggle('dark-mode');
                
                // Save theme preference
                if (body.classList.contains('dark-mode')) {
                    localStorage.setItem('theme', 'dark');
                } else {
                    localStorage.setItem('theme', 'light');
                }
            });
        });
    </script>
</body>
</html>
